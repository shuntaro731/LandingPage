---
import { Image } from "astro:assets";
import Button from "../starwind/button";
import logo from '../../../public/logo.svg';
---

<div class="container mx-auto">
  <header class="flex justify-between mt-10 items-center shrink-0">
    <Image src={logo} alt="logo" width={131} height={29} />
    <div class="flex gap-8">
      <a href="#">デザラボとは</a>
      <a href="#">コンセプト</a>
      <a href="#">できること</a>
    </div>
    <Button
      variant="default"
      size="lg"
      class="rounded-full font-bold text-primary hover:bg-primary hover:text-white bg-transparent border-2 border-primary h-[63px] px-8"
    >
      アプリを事前登録
    </Button>
  </header>
</div>
