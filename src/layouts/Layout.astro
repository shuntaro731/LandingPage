---
import Navigation from "../components/layout/Navigation.astro";
import "../styles/starwind.css";
import "../styles/global.css";
import "@fontsource/zen-kaku-gothic-new/400.css";
import "@fontsource/zen-kaku-gothic-new/700.css";

import font400Woff2 from "@fontsource/zen-kaku-gothic-new/files/zen-kaku-gothic-new-japanese-400-normal.woff2?url";
import font700Woff2 from "@fontsource/zen-kaku-gothic-new/files/zen-kaku-gothic-new-japanese-700-normal.woff2?url";
// import "@fontsource/zen-kaku-gothic-new";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preload" href={font400Woff2 as string} as="font" type="font/woff2" crossorigin>
    <link rel="preload" href={font700Woff2 as string} as="font" type="font/woff2" crossorigin>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body class="mx-auto flex flex-col min-h-screen overflow-x-hidden">
    <Navigation />
    <main class="grow">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    /* margin: 0; */
